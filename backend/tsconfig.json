{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["es2017", "dom"],
      "strict": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  